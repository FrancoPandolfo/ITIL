@model dynamic
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment WebHostEnvironment

@{
    ViewData["Title"] = "ITIL";
    var incidentsUrl = string.Empty;

    if (WebHostEnvironment.IsDevelopment())
    {
        incidentsUrl = "https://localhost:5001/ServiceDesk/Incidents";
    }
    else
    {
        incidentsUrl = "https://itilweb.onrender.com/ServiceDesk/Incidents";
    }
}

<style>
    body {
        background-image: url("https://www.fair-computer.de/wp-content/uploads/adobestock_280046195.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        height: 100vh;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
    }

    h1 {
        margin-top: 20px;
        margin-left: 20px;
        color: white;
    }

    .link {
        margin-top: 10px;
        margin-left: 20px;
        color: white;
        text-decoration: none;
    }
</style>

<h1>@ViewData["Title"]</h1>

<a class="link" href="@incidentsUrl">Incidents</a>
