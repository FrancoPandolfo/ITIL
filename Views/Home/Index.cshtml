@model dynamic
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment WebHostEnvironment

@{
    ViewData["Title"] = "ITIL";
    var incidentsUrl = string.Empty;
    var accountUrl = string.Empty;

    if (WebHostEnvironment.IsDevelopment())
    {
        incidentsUrl = "https://localhost:5001/ServiceDesk/Incidents";
        accountUrl = "https://localhost:5001/Account";
    }
    else
    {
        incidentsUrl = "https://itilweb.onrender.com/ServiceDesk/Incidents";
        accountUrl = "https://itilweb.onrender.com/Account";
    }
}

<style>
    body {
        background-image: url("https://www.fair-computer.de/wp-content/uploads/adobestock_280046195.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        height: 100vh;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
    }

    h1 {
        margin-top: 20px;
        margin-left: 20px;
        color: white;
    }

    .link {
        margin-top: 10px;
        margin-left: 20px;
        color: white;
        text-decoration: none;
    }

    .user-links {
        position: absolute;
        top: 20px;
        right: 20px;
    }

    .login,
    .logout {
        margin-right: 10px;
        color: black;
        text-decoration: none;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="user-links">
    @if (User.Identity.IsAuthenticated)
    {
        <span class="login">@User.Identity.Name</span>
        <a class="logout" href="javascript:void(0);" onclick="logout()">Logout</a>
    }
    else
    {
        <a class="login" href="@accountUrl">Login</a>
    }
</div>

<a class="link" href="@incidentsUrl">Incidentes</a>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function logout() {
        $.post("/Account/Logout")
            .done(function () {
                // Handle successful logout
                alert("Logged out successfully!");
                // Optionally, redirect the user to another page after logout
                window.location.href = "/Home/Index";
            })
            .fail(function () {
                // Handle logout failure
                alert("Failed to logout.");
            });
    }
</script>